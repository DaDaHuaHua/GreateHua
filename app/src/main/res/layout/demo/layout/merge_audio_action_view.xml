<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#fff">

    <TextView
        android:id="@+id/action_state_tv"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/shape_bg_audio_action"
        android:enabled="true"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="#fff"
        android:textSize="14sp"
        android:visibility="gone"
        tools:text="轮到你坐诊啦" />

    <RelativeLayout
        android:id="@+id/action_running_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bg_audio_action_running">

        <ImageView
            android:id="@+id/left_level_iv"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="13dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/icon_audio_action_nurse" />

        <ImageView
            android:id="@+id/progress_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/left_level_iv"
            android:layout_toStartOf="@+id/right_level_iv"
            android:src="@drawable/bg_audio_action_progress"
            android:foreground="@drawable/clip_audio_action_progress"
            android:layout_alignTop="@+id/left_level_iv"
            android:layout_alignBottom="@+id/left_level_iv"

            />
        <!--<ImageView-->
            <!--android:id="@+id/progress_running_iv"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_toEndOf="@id/level_start_iv"-->
            <!--android:layout_toStartOf="@+id/level_end_iv"-->
            <!--android:src="@drawable/icon_audio_action_progress"-->
            <!--android:layout_alignTop="@+id/level_start_iv"-->
            <!--android:layout_alignBottom="@+id/level_start_iv"-->
            <!--/>-->
        <TextView
            android:id="@+id/exp_left_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/left_level_iv"
            android:layout_toStartOf="@+id/right_level_iv"
            android:layout_alignTop="@+id/left_level_iv"
            android:layout_alignBottom="@+id/left_level_iv"
            android:singleLine="true"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="10sp"
            tools:text="还差2500000000经验值"
            android:ellipsize="middle"
            />

        <ImageView
            android:id="@+id/right_level_iv"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="13dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/icon_audio_action_deputy_director" />

    </RelativeLayout>


</RelativeLayout>